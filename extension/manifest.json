{
  "manifest_version": 2,

  "name": "caesura",
  "description": "Pause and play music from the best streaming services with a keyboard shortcut",
  "version": "0.1",

  "commands": {
    "toggle-audio-playback": {
      "suggested_key": {
        "default": "Ctrl+Shift+0"
      },
      "description": "Toggle audio playback",
      "global": true
    }
  },

  "content_scripts": [
    {
      "matches": ["http://www.bbc.co.uk/radio/player/*"],
      "js": ["common.js","bbcRadioOnePopupContentScript.js", "contentScriptsCommon.js"]
    },
    {
      "matches": ["https://*.soundcloud.com/*", "http://*.soundcloud.com/*"],
      "js": ["common.js", "classChangeBasedContentScript.js", "soundcloudContentScript.js", "contentScriptsCommon.js"]
    },
    {
      "matches": ["http://www.deezer.com/*"],
      "js": ["common.js", "classChangeBasedContentScript.js", "deezerContentScript.js", "contentScriptsCommon.js"]
    },
    {
      "matches": ["http://www.rdio.com/*"],
      "js": ["common.js", "classChangeBasedContentScript.js", "rdioContentScript.js", "contentScriptsCommon.js"]
    },
    {
      "matches": ["https://play.google.com/music/*", "http://play.google.com/music/*"],
      "js": ["common.js", "googleAudioContentScript.js", "contentScriptsCommon.js"]
    }
  ],

  "icons": { 
             "48": "icons/icon_48.png",
            "128": "icons/icon_128.png" 
  },

  "background": {
      "scripts": ["common.js","eventPage.js"],
      "persistent": false
  },
  "permissions": [
    "tabs",
    "storage"
  ]
}