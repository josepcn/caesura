{
  "manifest_version": 2,

  "name": "Caesura",
  "description": "Pause music on any tab with a keyboard shortcut",
  "version": "0.1",

  "commands": {
    "toggle-audio-playback": {
      "suggested_key": {
        "default": "Ctrl+Shift+0"
      },
      "description": "Toggle audio playback",
      "global": true
    }
  },

  "content_scripts": [
    {
      "matches": ["https://*.soundcloud.com/*", "http://*.soundcloud.com/*"],
      "js": ["soundcloudContentScript.js"]
    },
    {
      "matches": ["http://www.bbc.co.uk/radio/player/*"],
      "js": ["bbcRadioOneContentScript.js"]
    }
  ],

  "background": {
      "scripts": ["common.js","eventPage.js"],
      "persistent": false
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ]
}